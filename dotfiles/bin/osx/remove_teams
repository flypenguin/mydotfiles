#!/usr/bin/env bash

# source: microsoft
# https://answers.microsoft.com/en-us/msteams/forum/all/how-to-completely-remove-teams-from-mac/2499239d-d491-43cb-a9c1-acbee7223b8d


# $1 - full path to file / dir to delete
delete_teams_file() {
    DELETE_ME=$1
    if [[ -d $1 ]] ; then
        echo -n "DELETE      $DELETE_ME ... "
        sudo rm -rf "$DELETE_ME"
        echo "done."
    else
        echo "Not found - $DELETE_ME"
    fi
}

set -euo pipefail

# prepare sudo entry
echo "Prepare sudo ..."
sudo echo "sudo prep successful :)"

for DELETE_MASK in "com.microsoft.teams*" "teams*" "*microsoft*" "*oneauth*" ; do
  find $HOME/Library -iname "$DELETE_MASK" -type d | while read DIR_TO_DELETE ; do
    delete_teams_file "$DIR_TO_DELETE"
  done
done

delete_teams_file "/Applications/Microsoft Teams.app"

echo "All done."
