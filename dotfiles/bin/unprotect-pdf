#!/usr/bin/env bash

if [ -z "$1" ] ; then
    echo "USAGE: $(basename $0) FILE[, FILE...]"
    exit 255
fi

for file in "$@" ; do
    echo -n "Unprotecting $file ... "
    backup_file="${file%.*}.orig.$(pwgen -An 3 1).pdf"
    mv "$file" "$backup_file"
    \gs -q -dNOPAUSE -dBATCH -sDEVICE=pdfwrite -sOutputFile="$file" -f "$file.orig"
    touch -r "$backup_file" "$file"
    echo "done."
done
